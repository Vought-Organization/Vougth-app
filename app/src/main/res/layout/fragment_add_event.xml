<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <EditText
        android:id="@+id/edt_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Nome do evento"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_category_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Categoria do evento"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_description_event"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:gravity="start"
        android:hint="Descrição do evento "
        android:inputType="text|textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_cep_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="CEP"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_address_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Endereço do evento"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_state_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Estado"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_city_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/autoD8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/autoTime"
        android:layout_alignLeft="@+id/autoTime"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <!-- Creating autocomplete text field for time -->
    <EditText
        android:id="@+id/autoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputPlace"
        android:layout_alignBottom="@+id/txtTime"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:inputType="textAutoComplete"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <EditText
        android:id="@+id/edt_price_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Preço do evento"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_text" />

    <com.example.vought.login.LoadingButton
        android:id="@+id/btn_salve_event"
        app:text="Pulblicar evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin" />

</LinearLayout>